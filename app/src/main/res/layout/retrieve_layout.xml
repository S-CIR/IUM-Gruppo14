<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#2C4E19">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#2C4E19"
        android:text="Recupera Credenziali"
        android:textAlignment="center"
        android:textColor="#fff"
        android:autoSizeTextType="uniform"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1.5"
        android:text="Inserisci l'email associata al tuo account:"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/user"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:layout_marginVertical="22dp"
        android:layout_gravity="center"
        android:hint="User"
        android:textSize="35dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/torna"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:text="Torna alla home"
        android:textAlignment="center"
        android:textColor="#E9FF59"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1.5"
        android:background="#51E868"
        android:clickable="true"
        android:padding="20dp"
        android:text="Recupera"
        android:textColor="#fff"
        android:textColorHighlight="#000"
        android:textSize="25dp"

        />

    <TextView
        android:id="@+id/riprova"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:text="Non hai ricevuto l'email? Riprova"
        android:textAlignment="gravity"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />


</LinearLayout>