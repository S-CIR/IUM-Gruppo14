<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/devTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:layout_marginHorizontal="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/devFoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorPrimary"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/devBrand"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/devType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3.5dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/devLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="Localizza Device"
        android:autoSizeTextType="uniform"
        android:background="#51E868"
        android:textColor="#fff"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/devDel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="Elimina Device"
        android:autoSizeTextType="uniform"
        android:background="#B90707"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"/>



</LinearLayout>