<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/PlantTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:layout_marginHorizontal="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/PlantType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginHorizontal="10dp"
        android:autoSizeTextType="uniform"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:outlineSpotShadowColor="#fff"
        android:outlineAmbientShadowColor="#fff"/>

    <ImageView
        android:id="@+id/PlantFoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="@color/colorPrimary"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/PlantSemina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3.5dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Zona"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3.5dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/TypeZone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3.5dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:id="@+id/PlantRacc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3.5dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/PlantDel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="Elimina Pianta"
        android:autoSizeTextType="uniform"
        android:background="#B90707"
        android:textColor="#fff"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"/>




</LinearLayout>